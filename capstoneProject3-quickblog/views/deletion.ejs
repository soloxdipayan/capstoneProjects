<%- include('partials/header.ejs') %>

<div class="px-4 py-5 mb-5 text-center"> 
    <h2 class="display-5 mb-5 fw-bold text-body-emphasis">Are you sure you want to delete this post?</h2>
    <hr>
    <div class="container">
        <div class="row g-3 mb-2 justify-content-center">
            <div class="col-md-6">
                <div class="row g-0 border rounded overflow-hidden flex-md-row my-4 shadow-sm h-md-250 position-relative">
                  <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary-emphasis">QuickBlog</strong>
                    <h3 class="mb-0"><%= dltBlog.title %></h3>
                    <div class="mb-1 text-body-secondary"><%= dltBlog.date %></div>
                    <p class="card-text mb-auto"><%= dltBlog.content %></p>
                  </div>
                </div>
            </div>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center my-3">
                <form action="/delete/<%= dltBlog.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-primary btn-lg px-4">Delete</button>
                </form>
                <a href="/view-posts"><button class="btn btn-secondary btn-lg px-4">Cancel</button></a>
            </div>
        </div>
    </div> 
</div>

    


<%- include("partials/footer.ejs") %>
